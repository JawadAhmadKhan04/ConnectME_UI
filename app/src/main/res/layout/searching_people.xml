<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="#D3D3D3"
        android:drawableEnd="@drawable/search_logo"
        android:drawablePadding="16dp"
        android:layout_marginTop="15dp"/>


    <!-- Recent Searches Heading -->
    <TextView
        android:id="@+id/recent_search_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent searches"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#5C4033"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Recent Searches RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recent_search_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/recent_search_heading"
        android:layout_above="@id/bottom_nav"
        android:divider="@null"
        android:paddingHorizontal="8dp" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home_logo"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="13sp"
                android:alpha="0.3" />
        </LinearLayout>

        <!-- Search (Active) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/search_btn"
                android:src="@drawable/search_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="13sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Center Plus Button -->
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:alpha="0.95"
                android:src="@drawable/circle_plus" />
        </FrameLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_logo"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="13sp"
                android:textColor="#D3D3D3" />
        </LinearLayout>

        <!-- Contacts -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/contacts_btn"
                android:src="@drawable/contact_logo"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textSize="14sp"
                android:textColor="#D3D3D3" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
