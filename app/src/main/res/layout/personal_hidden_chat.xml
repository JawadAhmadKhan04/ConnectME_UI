<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/black">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_button_white_logo"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="Henry Benjamin"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Main Content -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dm_image"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/circle_background3"
                    android:backgroundTint="@null"
                    android:clipToOutline="true"/>

                <!-- View Profile Button -->
                <Button
                    android:id="@+id/view_profile_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="125dp"
                    android:text="View Profile"
                    style="@style/CustomButton"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"/>

                <!-- Chat Messages (RecyclerView) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chatRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:padding="16dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Youâ€™ve turned on vanish mode. New messages will disappear in
24 hours after everyone has seen them."
                    android:textStyle="normal"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="13dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chatHiddenRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:padding="16dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </FrameLayout>

    <!-- Input Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input_box_design"
        android:padding="12dp"
        android:orientation="horizontal"
        android:layout_margin="14dp">

        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Typing..."
            android:alpha="0.5"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:background="@null"
            android:padding="10dp"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/sendMessageButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_marginTop="5dp"
            android:src="@drawable/message_send_logo" />
    </LinearLayout>

</LinearLayout>
