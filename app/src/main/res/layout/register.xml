<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".RegisterActivity">

    <!-- Title -->
    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="247dp"
        android:contentDescription="My Image"
        android:scaleType="fitCenter"
        android:src="@drawable/connectme_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Great!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4A2E16"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="4dp"/>

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We're so excited to get you onboard!"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- Input Fields -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:textColorHint="#B0B0B0"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:textColorHint="#B0B0B0"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Phone Number"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:textColorHint="#B0B0B0"
        android:textSize="16sp"
        android:inputType="phone"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:textColorHint="#B0B0B0"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:background="@android:drawable/edit_text"
        android:padding="10dp"
        android:textColorHint="#B0B0B0"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"/>

    <!-- Terms and Privacy Policy -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By clicking Agree and continue below, I agree to"
        android:textSize="12sp"
        android:textColor="#666666"
        android:paddingTop="12dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms of Service and Privacy Policy"
        android:textSize="12sp"
        android:textColor="#4A2E16"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Register Button -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Register"
        android:backgroundTint="#4A2E16"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>

    <!-- Login Text -->
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login"
        android:textSize="14sp"
        android:textColor="#4A2E16"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="12dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
