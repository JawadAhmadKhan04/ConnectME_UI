<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Top Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:id="@+id/back_button"
            android:layout_height="24dp"
            android:src="@drawable/back_button_logo"
            android:contentDescription="Back button"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="OliviaD"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/followersTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="410 Followers"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/followingTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="387 Following"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:textColor="#8B5E3B"
            android:background="@drawable/underline_brown"/>
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@null"
        android:drawableEnd="@drawable/search_logo_alpha"
        android:drawablePadding="16dp"
        android:layout_marginTop="10dp"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/followingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"/>
</LinearLayout>
