<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:paddingTop="50dp"
    android:background="@android:color/white">

    <!-- Contact Name -->
    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Henry Benjamin"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp"/>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="75dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circle_shape"
        android:scaleType="centerCrop"
        android:src="@drawable/dm_image"/>

    <!-- Call Duration -->
    <TextView
        android:id="@+id/callDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:32"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="210dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Three Dots Button -->
        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/threedots"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/three_dots"
                android:contentDescription="Three Dots"
                android:layout_gravity="center"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/btnVideo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/video_call"
                android:contentDescription="Video Call"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"/>
        </FrameLayout>



        <!-- Speaker Button -->
        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/btnSpeaker"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/speaker_on"
            android:contentDescription="Speaker"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>
        </FrameLayout>



    <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/btnMute"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mic_logo"
            android:contentDescription="Mute"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"/>
    </FrameLayout>


    <!-- End Call Button -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_red_background"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <ImageView
                android:id="@+id/btnEndCall"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/end_call"
                android:contentDescription="End Call"
                android:layout_gravity="center"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
