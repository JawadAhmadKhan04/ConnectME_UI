<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:gravity="center"
    android:padding="20dp">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/connectme_logo_2"
        android:scaleType="fitCenter"
        android:contentDescription="My Image" />


    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="7dp"
        android:text="@string/welcome"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_gravity="start" />

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/we_re_happy_to_see_you_please_login_to_continue"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="7dp"
        android:gravity="start"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/usernameInput"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:padding="10dp"
        android:textColorHint="#B0B0B0"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textColorHint="#B0B0B0"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/forgotPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:textColor="#5A3620"
        android:layout_gravity="start"
        android:layout_marginBottom="20dp" />


    <Button
        android:id="@+id/LoginButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/login"
        android:background="@drawable/rectangle_button"
        android:backgroundTint="#5A3620"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or continue with"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:background="@android:color/white"
            android:padding="5dp"
            android:layout_marginHorizontal="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:background="#000000" />

    </LinearLayout>


    <LinearLayout
        android:paddingStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/googleButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/circle_shape_logos"
            android:contentDescription="Google Login"
            android:scaleType="centerInside"
            android:src="@drawable/google_icon"
            android:padding="8dp"/>



        <ImageButton
            android:id="@+id/appleButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:contentDescription="Apple Login"
            android:src="@drawable/apple_icon" />

        <ImageButton
            android:id="@+id/facebookButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="35dp"
            android:contentDescription="Facebook Login"
            android:background="@drawable/facebook_icon"/>

    </LinearLayout>

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_text"
        android:textSize="14sp"
        android:textStyle="normal"
        android:autoLink="none"/>


</LinearLayout>
